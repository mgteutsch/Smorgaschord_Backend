<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/materialize/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/materialize/css/materialize.min.css" rel="stylesheet"
          type="text/css" />
    <link rel="stylesheet" type="text/css" href="styles/main.css">
</head>
<body ng-app="Smorgaschord">
    <nav>
        <div id="navbar" class="nav-wrapper pink accent-3">
            <a class="brand-logo left"><i class="material-icons">equalizer</i><!--Smörgåschord--></a>
            <ul class="right">
                <li><a href="#!/about" class="aboutNav">About</a></li>
                <li><a href="#!/lessons" class="lessonsNav">Lessons</a></li>
                <li><a href="#!/eartraining" class="eartrainingNav">Ear Training</a></li>
                <li><a href="#!/chordcomposer" class="chordcomposerNav">Chord Composer</a></li>
                <li><a href="#!/improviser" class="improviserNav">Improviser</a></li>
                <li><a href="#!/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="center"><i class="material-icons">equalizer</i></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!--Scripts.Render("~/bundles/bootstrap")-->
    <!--Scripts.Render("~/bundles/materialize")-->
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
